<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <!-- Topic number icon -->
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/udemy_purple"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textViewTopicNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <!-- Topic content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTopicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction to Java Programming"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/udemy_text_primary"
            android:layout_marginBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textViewTopicDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn the fundamentals of Java programming language"
            android:textSize="14sp"
            android:textColor="@color/udemy_text_secondary"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Arrow icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_more"
        android:tint="@color/udemy_text_muted"
        android:layout_marginStart="8dp" />

</LinearLayout> 