<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/udemy_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Card View-like Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/textViewSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FU Self Learning"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/udemy_purple"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your account"
                android:textSize="16sp"
                android:textColor="@color/udemy_text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/udemy_text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editTextFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="John Doe"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background"
                android:textColor="@color/udemy_text_primary"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/udemy_text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="john_doe@gmail.com"
                android:inputType="textEmailAddress"
                android:background="@android:drawable/editbox_background"
                android:textColor="@color/udemy_text_primary"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/udemy_text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="••••••"
                android:inputType="textPassword"
                android:background="@android:drawable/editbox_background"
                android:textColor="@color/udemy_text_primary"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Confirm Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/udemy_text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="••••••"
                android:inputType="textPassword"
                android:background="@android:drawable/editbox_background"
                android:textColor="@color/udemy_text_primary"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Register -->
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/udemy_purple"
                android:paddingVertical="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Already have account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/udemy_text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- Login Button -->
            <Button
                android:id="@+id/buttonGoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/udemy_purple_light"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
